# Funzioni

# chiama scan_fast [nÂ° rete interna] per lanciare nmap sulla rete n-esima
# (oppure su quella del Carducci)
function scanfast
{
	if [ $# -ge 1 ]; then
		rete=$1
	else
		rete=6
	fi
	echo "scan di 192.168.$rete.0/24"
	nmap -F 192.168.$rete.0/24
}


