function figi {
  python ~/Scripts/query-identifier.py "$1" | jq
}

function mimport {
	mongoimport "${ConnectionStrings__MongoDb}" --authenticationDatabase=admin "$@"
}

function mexport {
	mongoexport "${ConnectionStrings__MongoDb}" --authenticationDatabase=admin "$@"
}

function is {
	mexport -d identifiers -c identifiers --type=csv -f Identifier,SecurityType,Exchange,Symbol,ExpirationDate,Name -q '{"SecurityType":{"$in":[1,2,3,5,6]}}' 2>/dev/null | grep "$1"
}
function iso {
  identifier=$(mexport -d identifiers -c identifiers --type=csv -f Identifier -q '{"SecurityType":{"$in":[1,2,3,5,6]},"Symbol":"'"$1"'"}' 2>/dev/null | tail -n 1)
  echo "symbol=$1,identifier=${identifier}"
	mexport -d identifiers -c identifiers --type=csv -f Identifier,Exchange,Multiplier,SettlementMethod,Right,Underlying,Strike,ExpirationDate -q '{"SecurityType":4,"Underlying":"'"$identifier"'"}' 2>/dev/null
}
function allocations {
	mexport -d allocations_development -c allocations -q '{"NameId":{"$regex":"'${1}'"}}' 2>/dev/null
}
function import-general-allocation {
	mimport --upsert --upsertFields NameId "$@"
}
function import-allocation {
	import-general-allocation -d allocations_development -c allocations "$@"
}

function pretty-csv {
	perl -pe 's/((?<=,)|(?<=^)),/ ,/g;' -e 's/([0-9]+\.[0-9][0-9])[0-9]*/\1/g' | column -t -s, -R 1,2,3,4,5,6,7,8,9 | less -S -F -X -K
}

